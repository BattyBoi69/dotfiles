class LogLineParser
  def initialize(line)
    @line = line

    split_line = @line.split(":")
    @level = split_line[0].slice(1,-2)
    @message = split_line[1].strip
  end

  def message
    return @message
  end

  def log_level
    return @level.downcase
  end

  def reformat
    return "#{@message} (#{@level.downcase})"
  end
end
